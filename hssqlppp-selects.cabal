  type:     bzr
  location: https://launchpad.net/+branch/~jakewheat/hssqlppp/trunk

Library
  Build-Depends:     base >= 4 && < 5,
                     uniplate >= 1.6 && < 1.7,
                     mtl >= 2.0.1.0 && < 2.1,
                     parsec >= 3.1 && < 3.2,
                     pretty >= 1.0.1.1 && < 1.1,
                     transformers >= 0.2.2.0 && < 0.3
